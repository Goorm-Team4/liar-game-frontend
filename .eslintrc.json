{
  "env": {
    "browser": true,
    "es2017": true,
    "node": true
  },

  "extends": [
    "airbnb",
    "plugin:react/recommended",
    "plugin:prettier/recommended",
    "prettier"
  ],

  "plugins": ["react", "import"],
  "parser": "babel-parser",

  "rules": {
    "no-unused-vars": ["error"],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
  },

  "settings": {
    "react": {
      "version": "detect"
    },

    "import/resolver": {
      "alias": {
        "map": [["@", "./src"]],
        "extensions": [".js", ".jsx"]
      }
    }
  }
}
